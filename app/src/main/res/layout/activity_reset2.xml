<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1c1a1a"
    tools:context=".reset2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrow"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Your password"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your email address.You will\n
receive a link to create a new password  \nvia email."
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"
            android:gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="#8F8585"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Your Email"
            android:background="@drawable/editbutton"
            android:textSize="@dimen/_13sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="#40FFFFFF"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="bottom"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/buttoncolour"
            android:gravity="center"
            android:text="Login"
            android:textSize="20dp" />

    </LinearLayout>




</LinearLayout>

