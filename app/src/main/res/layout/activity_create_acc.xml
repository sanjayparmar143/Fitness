<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".create_acc">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrow"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_10sdp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create an account"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="#fff"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Username"
            android:background="#322B2D"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="#40FFFFFF"
            android:layout_margin="@dimen/_10sdp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Email"
            android:background="#322B2D"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="#40FFFFFF"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="phone"
            android:background="#322B2D"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="#40FFFFFF"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Date of Birth"
            android:textStyle="bold"
            android:background="#322B2D"
            android:textSize="@dimen/_13sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="#40FFFFFF"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="Password"
            android:textStyle="bold"
            android:background="#322B2D"
            android:textSize="@dimen/_13sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="#40FFFFFF"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="bottom"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/buttoncolour"
            android:gravity="center"
            android:text="Login"
            android:textSize="20dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By clicking Sign up agree to the following"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_50sdp"
            android:textColor="#8F8585"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Condition"
                android:paddingLeft="@dimen/_30sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="without regitration"
                android:textColor="#8F8585"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"/>

        </LinearLayout>

</LinearLayout>
</LinearLayout>